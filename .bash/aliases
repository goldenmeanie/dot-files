# MISCELLANEOUS TOOLS
alias dbstart='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias dbstop='pg_ctl -D /usr/local/var/postgres stop -s -m fast'
alias psa="ps aux | grep"

# alias remigrate='rake db:migrate:redo && rake db:test:clone'
alias migrate='rake db:migrate && rake db:test:clone'

# BB SHORTCUTS

# Go places
alias bbk="cd ~/Sites/Batchbook"
alias bbd="cd ~/Sites/BatchDeux"
alias haus="cd ~/Sites/BatchHaus/"
alias hmk="cd ~/Sites/Hammock"
alias mcmOG="cd ~/Sites/mcm_og/"
alias mcm="cd ~/Sites/MarCommV2"
alias sbw="cd ~/Sites/SBWeb"
alias frnd="cd ~/Sites/customerfriendly.biz"

# BB Contractor Forks of Marcomm
alias dnmcm="cd ~/Sites/dn-marcomm"
alias jvmcm="cd ~/Sites/jv-marcomm"

# Tell SASS to watch a site
alias sassy="sass --watch scss:css --style compressed"

# Deploy Marcomm
alias mcdp="rake marcomm:pull"


# Launch Apps
# OGBB
alias bbgo="cd ~/Sites/BatchBook/; ./script/server"

# BB2
alias bdgo="cd ~/Sites/BatchDeux/; foreman start"

#BatchHaus
